<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".TemperatureMenu">


    <Button
        android:id="@+id/buttonTempMenuTop"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="15dp"
        android:background="@drawable/floor_0_button"
        android:onClick="mainButtonPressed"/>


    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/buttonTempMenuTop"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_corner"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewTemp1"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:src="@drawable/bedroom" />

        <TextView
            android:id="@+id/textViewTemp1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="XX °C"
            android:layout_marginLeft="10dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/editTextTemp1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="XX"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:inputType="number"
            android:textColor="@color/colorWhite"
            android:background="@color/colorBlue"
            android:gravity="center"/>

        <Button
            android:id="@+id/buttonTemp1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Set"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:background="@drawable/buttonshape2"
            android:textColor="@color/colorBlue"
            android:onClick="button1Pressed"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/LinearLayout1"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_corner"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewTemp2"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:src="@drawable/office" />

        <TextView
            android:id="@+id/textViewTemp2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="XX °C"
            android:layout_marginLeft="10dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/editTextTemp2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="XX"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:inputType="number"
            android:textColor="@color/colorWhite"
            android:background="@color/colorBlue"
            android:gravity="center"/>

        <Button
            android:id="@+id/buttonTemp2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Set"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:background="@drawable/buttonshape2"
            android:textColor="@color/colorBlue"
            android:onClick="button2Pressed"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/LinearLayout2"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_corner"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewTemp3"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:src="@drawable/wardrobe" />

        <TextView
            android:id="@+id/textViewTemp3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="XX °C"
            android:layout_marginLeft="10dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/editTextTemp3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="XX"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:inputType="number"
            android:textColor="@color/colorWhite"
            android:background="@color/colorBlue"
            android:gravity="center"/>

        <Button
            android:id="@+id/buttonTemp3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Set"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:background="@drawable/buttonshape2"
            android:textColor="@color/colorBlue"
            android:onClick="button3Pressed"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/LinearLayout3"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_corner"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewTemp4"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:src="@drawable/livingroom" />

        <TextView
            android:id="@+id/textViewTemp4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="XX °C"
            android:layout_marginLeft="10dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/editTextTemp4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="XX"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:inputType="number"
            android:textColor="@color/colorWhite"
            android:background="@color/colorBlue"
            android:gravity="center"/>

        <Button
            android:id="@+id/buttonTemp4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Set"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:background="@drawable/buttonshape2"
            android:textColor="@color/colorBlue"
            android:onClick="button4Pressed"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/LinearLayout4"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_corner"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewTemp5"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:src="@drawable/kitchen" />

        <TextView
            android:id="@+id/textViewTemp5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="XX °C"
            android:layout_marginLeft="10dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/editTextTemp5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="XX"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:inputType="number"
            android:textColor="@color/colorWhite"
            android:background="@color/colorBlue"
            android:gravity="center"/>

        <Button
            android:id="@+id/buttonTemp5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Set"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:background="@drawable/buttonshape2"
            android:textColor="@color/colorBlue"
            android:onClick="button5Pressed"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout6"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/LinearLayout5"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_corner"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewTemp6"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:src="@drawable/bathroom" />

        <TextView
            android:id="@+id/textViewTemp6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="XX °C"
            android:layout_marginLeft="10dp"
            android:gravity="center" />

        <EditText
            android:id="@+id/editTextTemp6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="XX"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:inputType="number"
            android:textColor="@color/colorWhite"
            android:background="@color/colorBlue"
            android:gravity="center"/>

        <Button
            android:id="@+id/buttonTemp6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Set"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:background="@drawable/buttonshape2"
            android:textColor="@color/colorBlue"
            android:onClick="button6Pressed"/>
    </LinearLayout>

</RelativeLayout>